{{yield (hash
  data=this.query.data
  error=this.query.error
  value=this.query.value
  initialValue=@initialValue

  query=this.query
  counter=this.query.counter
  startedAt=this.query.startedAt
  finishedAt=this.query.finishedAt

  status=this.query.status
  isPending=this.query.isPending
  isLoading=this.query.isPending
  isFulfilled=this.query.isFulfilled
  isResolved=this.query.isFulfilled
  isRejected=this.query.isRejected
  isSettled=this.query.isSettled
  isInitial=this.query.isInitial

  run=this.run
  reload=this.query.reload
  cancel=this.query.cancel

  Pending=(component "await/pending" shouldRender=this.query.isPending value=this.query.value)
