{{yield (hash
  data=this.data
  error=this.error
  value=this.value
  initialValue=@initialValue

  startedAt=this.startedAt
  finishedAt=this.finishedAt

  status=this.status
  isPending=this.isPending
  isLoading=this.isPending
  isFulfilled=this.isFulfilled
  isResolved=this.isFulfilled
  isRejected=this.isRejected
  isSettled=this.isSettled
  isInitial=this.isInitial

  counter=this.counter
  task=this.promiseTask.last
  reload=this.reload
  cancel=this.cancel
  run=this.run

  Pending=(component "await/pending" shouldRender=this.isPending value=this.value)
  Loading=(component "await/pending" shouldRender=this.isPending value=this.value)
  Fulfilled=(component "await/complete" shouldRender=this.isFulfilled value=this.data)
  Resolved=(component "await/complete" shouldRender=this.isFulfilled value=this.data)
  Rejected=(component "await/complete" shouldRender=this.isRejected value=this.error)
  Settled=(component "await/complete" shouldRender=this.isSettled value=this.value)
  Initial=(component "await/initial" shouldRender=this.isInitial value=this.data)
)}}